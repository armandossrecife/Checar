<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignTop="@+id/idLista"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <TextView
        android:id = "@+id/idPlacaLista"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginLeft = "3dp"
        android:layout_marginTop = "5dp"
        android:text = "Placa"
        android:layout_row="0"
        android:layout_column="0" />

    <TextView
        android:id = "@+id/idFabricanteLista"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginLeft = "5dp"
        android:layout_marginTop = "5dp"
        android:text = "Fabricante"
        android:layout_row="1"
        android:layout_column="0" />

    <TextView
        android:id = "@+id/idModeloLista"
        android:layout_width = "wrap_content"
        android:layout_gravity = "fill_horizontal"
        android:layout_height = "wrap_content"
        android:layout_marginLeft = "5dp"
        android:layout_marginTop = "5dp"
        android:text = "Modelo"
        android:layout_row="2"
        android:layout_column="0" />

    <TextView
        android:id = "@+id/idVersaoLista"
        android:layout_width = "wrap_content"
        android:layout_gravity = "fill_horizontal"
        android:layout_height = "wrap_content"
        android:layout_marginLeft = "5dp"
        android:layout_marginTop = "5dp"
        android:text = "Versao"
        android:layout_row="3"
        android:layout_column="0" />

    <TextView
        android:id = "@+id/idAnoLista"
        android:layout_width = "wrap_content"
        android:layout_gravity = "fill_horizontal"
        android:layout_height = "wrap_content"
        android:layout_marginLeft = "5dp"
        android:layout_marginTop = "5dp"
        android:text = "Ano"
        android:layout_row="4"
        android:layout_column="0" />
    <TextView
        android:id = "@+id/idCorLista"
        android:layout_width = "wrap_content"
        android:layout_gravity = "fill_horizontal"
        android:layout_height = "wrap_content"
        android:layout_marginLeft = "5dp"
        android:layout_marginTop = "5dp"
        android:text = "Cor"
        android:layout_row="5"
        android:layout_column="0" />
    <TextView
        android:id = "@+id/idMotorLista"
        android:layout_width = "wrap_content"
        android:layout_gravity = "fill_horizontal"
        android:layout_height = "wrap_content"
        android:layout_marginLeft = "5dp"
        android:layout_marginTop = "5dp"
        android:text = "Motor"
        android:layout_row="6"
        android:layout_column="0" />

</GridLayout>